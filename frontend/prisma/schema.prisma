generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model threats {
  id           Int       @id @default(autoincrement())
  ip_address   String    @db.VarChar(50)
  risk_score   Int
  reason       String?
  action_taken String?   @db.VarChar(50)
  detected_at  DateTime? @default(now()) @db.Timestamp(6)
}
